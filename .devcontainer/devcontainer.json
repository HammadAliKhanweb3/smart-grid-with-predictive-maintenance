{
    "name": "Smart Grid Fullstack Dev",
    "dockerComposeFile": [
        "../docker-compose.yaml",
        "docker-compose.yml"
    ],
    "service": "backend",
    "workspaceFolder": "/workspaces/smart-grid",
    
    // REMOVE the "features" block entirely
    
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "bradlc.vscode-tailwindcss",
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "tamasfe.even-better-toml"
            ]
        }
    },

    // Optional: Only use this for things that need to happen 
    // AFTER the volume is mounted (like installing project-specific deps)
    "postCreateCommand": "pnpm install",

    "remoteUser": "root"
}